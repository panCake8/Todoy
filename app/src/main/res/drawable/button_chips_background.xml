<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <stroke android:width="@dimen/small_stroke" android:color="@color/secondary_color" />
            <solid android:color="@color/background_selectedChips" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <stroke android:width="@dimen/small_stroke"
                android:color="@color/chips_stroke_color" />
            <solid android:color="@color/background_unselectedChips" />
        </shape>
    </item>
</selector>