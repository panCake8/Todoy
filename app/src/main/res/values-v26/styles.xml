<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonHomeViewAll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>

        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>

    </style>

    <style name="Chips_choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="chipCornerRadius">@dimen/radius_medium</item>
        <item name="chipEndPadding">@dimen/margin_large</item>
        <item name="chipStartPadding">@dimen/margin_large</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">@dimen/no_size</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
    </style>
</resources>